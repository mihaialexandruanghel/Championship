{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ profile.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ profile.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ profile.email }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ profile.day }}</td>
            </tr>
            <tr>
                <th>Month</th>
                <td>{{ profile.month }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ profile.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_index') }}">back to list</a>

    <a href="{{ path('profile_edit', {'id': profile.id}) }}">edit</a>

